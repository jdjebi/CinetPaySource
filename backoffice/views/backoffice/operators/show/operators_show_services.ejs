<div class="container p-4">
	<div class="row justify-content-around">
		<div class="col-sm-12 col-md-5" >
			<div v-if="operator.apiService == null">
				<div class="text-center p-5 border" style="border: 2px #c2c8ce dotted !important; border-radius: 5px">
					<div class="h3" >
						<div class="mb-2 text-muted " style="font-size: 30px;"><i class="fa fa-key"></i></div>
						<div class="text-muted ">Aucun service d'API</div>
					</div>
					<div class="mt-3">
						<button v-on:click="openServiceAdder(ApiServiceType)" class="btn btn-success">Ajouter</button>
					</div>
				</div>
			</div>
			<div v-else>
				<div class="p-3 border bg-white" style="border-radius: 5px">
					<div class="d-flex justify-content-between align-items-center">
						<div class="h4 mb-0 fw-bold">
							<i v-show="operator.apiService.status" class="fa fa-circle text-success small"></i>
							<i v-show="!operator.apiService.status" class="fa fa-circle text-danger small"></i>
							&nbsp;
							<a v-bind:href="urls.services.transfert.show + '/' + operator.apiService.id" class="text-dark">
								{{ operator.apiService.name }}
							</a>
						</div>
						<div>
							<span class="bg-success badge">{{ operator.apiService.type }}</span>
						</div>
					</div>
					<div class="text-muted">
						<span class="small text-muted">{{ operator.apiService.minName }}</span>
					</div>
					<div class="mt-2 small">
						<div class="row">
							<div class="col-md-6 col-sm-12">
								<div class="fw-bold">URL</div>
								<div>{{ operator.apiService.url }}</div>
							</div>
							<div class="col-md-6 col-sm-12">
								<div class="fw-bold">TOPIC</div>
								<div>{{ operator.apiService.kafkaTopic }}</div>
							</div>
						</div>
					</div>
					<div class="mt-4 d-flex justify-content-between small">
						<div>
							<span class="fw-bold mt-2">ACTIVE:</span>
							<span v-if="operator.apiService.active">OUI</span>
							<span v-else>NON</span>
						</div>
						<div>
							<button v-on:click="removeOperatorService(operator.apiService)" class="btn btn-danger btn-sm">Retirer</button>	
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-12 col-md-5">
			<div v-if="operator.simService == null">
				<div class="text-center p-5 border" style="border: 2px #c2c8ce dotted !important; border-radius: 5px">
					<div class="h3" >
						<div class="mb-2 text-muted " style="font-size: 30px;"><i class="fa fa-sim-card"></i></div>
						<div class="text-muted ">Aucun service de SIM</div>
					</div>
					<div class="mt-3">
						<button v-on:click="openServiceAdder(SimServiceType)"  class="btn btn-success">Ajouter</button>
					</div>
				</div>
			</div>
			<div v-else>
				<div class="p-3 border bg-white" style="border-radius: 5px">
					<div class="d-flex justify-content-between align-items-center">
						<div class="h4 mb-0 fw-bold">
							<i v-show="operator.simService.status" class="fa fa-circle text-success small"></i>
							<i v-show="!operator.simService.status" class="fa fa-circle text-danger small"></i>
							&nbsp;
							<a v-bind:href="urls.services.transfert.show + '/' + operator.simService.id" class="text-dark">
								{{ operator.simService.name }}
							</a>
						</div>
						<div>
							<span class="bg-success badge">{{ operator.simService.type }}</span>
						</div>
					</div>
					<div class="text-muted">
						<span class="small text-muted">{{ operator.simService.minName }}</span>
					</div>
					<div class="mt-2 small">
						<div class="row">
							<div class="col-md-6 col-sm-12">
								<div class="fw-bold">URL</div>
								<div>{{ operator.simService.url }}</div>
							</div>
							<div class="col-md-6 col-sm-12">
								<div class="fw-bold">TOPIC</div>
								<div>{{ operator.simService.kafkaTopic }}</div>
							</div>
						</div>
					</div>
					<div class="mt-4 d-flex justify-content-between small">
						<div>
							<span class="fw-bold mt-2">ACTIVE:</span>
							<span v-if="operator.simService.active">OUI</span>
							<span v-else>NON</span>
						</div>
						<div>
							<button v-on:click="removeOperatorService(operator.simService)" class="btn btn-danger btn-sm">Retirer</button>	
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>