<div class="modal fade" id="formCreateApi" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form v-on:submit.prevent="createApi">
                <div class="modal-header">
                    <h4 class="modal-title">Créer une API</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

        	         <div class="mb-3">
                        <label class="col-form-label">Nom de l'API</label>
                        <input v-model="form.api.name" type="text" class="form-control" name="api">
                    </div>

                    <div class="row">
                    	<div class="col-6">
        		        	<div class="mb-3">
		                        <label class="col-form-label">E-mail</label>
		                        <input v-model="form.api.email" type="text" class="form-control" name="email">
		                    </div>
                    	</div>
                    	<div class="col-6">
		                    <div class="mb-3">
		                        <label class="col-form-label">Mot de passe</label>
		                        <input v-model="form.api.password" type="text" class="form-control" name="password">
		                    </div>
                    	</div>
                    </div>

                    <div class="mb-3">
                        <label class="col-form-label">Téléphone</label>
                        <input v-model="form.api.phone" type="text" class="form-control" name="phone">
                    </div>
                </div>
                <div class="modal-footer">
                  	<button type="submit" class="btn btn-success">Créer</button>
                </div>
            </form>
        </div>
    </div>
</div>