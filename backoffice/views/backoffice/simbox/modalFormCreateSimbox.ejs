<div class="modal fade" id="formCreateSimbox" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form  v-on:submit.prevent="createSimbox">
                <div class="modal-header">
                    <h4 class="modal-title">Nouvelle SIMBOX</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-6">
                                <label class="col-form-label">Nom de la SIMBOX</label>
                                <input v-model="form.simbox.name" type="text" class="form-control" name="name">
                            </div>
                            <div class="col-6">
                                <label class="col-form-label">Numéro de série</label>
                                <input v-model="form.simbox.serialNumber" type="text" class="form-control" name="serialNumber">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-12">
                                <label class="col-form-label">Description</label>
                                <textarea class="form-control" v-model="form.simbox.description" name="description"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-6">
                                <label class="col-form-label">Nombre total de ports</label>
                                <input v-model="form.simbox.totalPort" type="number" class="form-control" name="url">    
                            </div>
                            <div class="col-6">
                                <label class="col-form-label">URL</label>
                                <input v-model="form.simbox.url" type="text" class="form-control" name="url">    
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-6">
                                <label class="col-form-label">Adresse IP locale</label>
                                <input v-model="form.simbox.localIp" type="text" class="form-control" name="localIp">
                            </div>
                            <div class="col-6">
                                <label class="col-form-label">Adresse IP internet</label>
                                <input v-model="form.simbox.internetIp" type="text" class="form-control" name="internetIp">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-12">
                                <label class="col-form-label">Mot de passe</label>
                                <input v-model="form.simbox.password" type="text" class="form-control" name="password">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                  	<button type="submit" class="btn btn-success">Créer</button>
                </div>
            </form>
        </div>
    </div>
</div>