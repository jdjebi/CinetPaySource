<div class="border-top position-relative">
    <div class="bg-white">
        <div class="p-3 border-bottom">
            <div class="d-flex justify-content-center justify-content-between">
                <div class="d-flex align-items-center">
                    <div class="me-3 d-flex align-items-center">
                        <i class="fa fa-door-open" style="font-size: 2.5em"></i>
                    </div>
                    <div>
                        <div class="h4 fw-bold text-dark">
                            {{ service.name }} <a href="#" v-on:click="refresh" class="ms-3 small text-muted"><i class="fa fa-redo"></i></a>
                        </div>
                        <div class="small">
                            <span class="badge bg-success">Service syst√®me</span>
                            <template v-if="service.url">
                                &middot; <span class="text-muted">{{ service.url }}</span>
                            </template>
                        </div>
                    </div>
                    <div class="ms-5">
                        <div>
                            <div class="ldBar label-center" id="myldBar" data-preset="circle" data-stroke-width="5" data-stroke="#00b638" style="height:55px;"></div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="d-flex align-items-center me-5">
                        <div class="text-center me-5 cinetpay cinet-box-indicator">
                            <div><i class="fa fa-circle" v-bind:class="{ 'text-danger': !service.active, 'text-success': service.active }"></i></div>
                            <div class="fw-bold text-muted">ACTIF</div>
                        </div>
                        <div class="text-center me-2 cinetpay cinet-box-indicator">
                            <div><i class="fa fa-circle" v-bind:class="{ 'text-danger': !service.status, 'text-success': service.status }"></i></div>
                            <div class="fw-bold text-muted">STATUT</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
    <div>
        <div class="bg-white d-flex">
            <div style="width:50px" class="text-center border-bottom d-flex align-items-center justify-content-center">
                <a href="/services" class="text-muted"><i class="fa fa-arrow-left"></i></a>
            </div>
            <div style="flex-grow: 2;">
                <ul id="horizontal-nav-tabs" class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" data-bs-toggle="tab" data-bs-target="#monitor">
                            <i class="align-middle" data-feather="monitor"></i>
                            Tableau de bord
                        </a>
                    </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#" data-bs-toggle="tab" data-bs-target="#info">
                        <i class="align-middle" data-feather="info"></i>
                        Informations
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#" data-bs-toggle="tab" data-bs-target="#config">
                        <i class="align-middle fa fa-cog"></i>
                        Configurations
                    </a>
                  </li>
                </ul>
            </div>
        </div>

        <div class="tab-content">
            <div id="monitor" class="tab-pane fade show active">
                <%- include('passerelle_index_page_dashboard.ejs') %>
            </div>
            <div id="info" class="p-3 tab-pane fade show">
                <%- include('passerelle_index_page_infos.ejs') %>
            </div>
            <div id="config" class="tab-pane fade show">
                <%- include('passerelle_index_page_config.ejs') %>
            </div>
        </div>
    </div>
</div>  
